@model IEnumerable<CarRental.Models.User>

<div class="col-md-12">
    <div class="row offset-md-2 col-md-8">
        <div class="row col-md-12 header">
            <span>Użytkownicy</span>
        </div>
        <table class="table-striped register-form" style="margin-top: 15px;">
            <thead>
                <tr>
                    <th scope="col" style="text-align: center;">
                        Imię
                    </th>
                    <th scope="col" style="text-align: center;">
                        Nazwisko
                    </th>
                    <th scope="col" style="text-align: center;">
                        Email
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td style="text-align: center;">
                            @Html.ActionLink("Zezerwacje", "GetOrders", "Order", new {  id = item.Id  }, new { @class = "btn btn-primary"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>